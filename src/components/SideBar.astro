---
import type { CollectionEntry } from "astro:content";

interface Props {
  imoveis: CollectionEntry<"imoveis">[];
}

const { imoveis } = Astro.props;

// Lista estática de imóveis em destaque
const destaques = [
  { 
    slug: "jardim-dos-lagos", 
    title: "Residencial Jardim dos Lagos",
    cidade: "Cuiabá",
    estado: "MT"
  },
];
---
<div class="space-y-6">
  <!-- Barra de Pesquisa -->
  <div class="relative p-4 bg-gray-100 rounded-lg shadow flex">
    <input 
      type="text"
      id="sidebar-search-input"
      placeholder="Pesquisar..."
      class="w-full pl-10 pr-2 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
    <button 
      id="searchButton"
      class="absolute inset-y-0 left-0 flex items-center pl-6"
      aria-label="Buscar">
      <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1110.5 3a7.5 7.5 0 016.15 12.65z"/>
      </svg>
    </button>
  </div>

  <!-- Imóveis em Destaque -->
  <div class="p-4 bg-gray-100 rounded-lg shadow">
    <h2 class="text-xl font-bold mb-2">Destaques</h2>
    <ul class="space-y-2">
      {destaques.map(imovel => (
        <li>
          <a 
            href={`/imoveis/${imovel.slug}`} 
            class="text-lime-700 hover:underline"
          >
            {imovel.title}
            <p class="text-sm text-gray-500">
              {imovel.cidade}, {imovel.estado}
            </p>
          </a>
        </li>
      ))}
    </ul>
  </div>

  <!-- Categorias de Imóveis -->
  <div class="p-4 bg-gray-100 rounded-lg shadow">
    <h2 class="text-xl font-bold mb-2">Categorias</h2>
    <div class="flex flex-wrap gap-2">
      {[...new Set(imoveis.map(i => i.data.categoria))].map(categoria => (
        <a 
          href={`/imoveis/categoria/${categoria.toLowerCase()}`} 
          class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm hover:bg-blue-200"
        >
          {categoria}
        </a>
      ))}
    </div>
  </div>
</div>

<script>
  // Script de busca atualizado para imóveis
  document.addEventListener("DOMContentLoaded", () => {
    const searchInput = document.getElementById("sidebar-search-input");
    const searchButton = document.getElementById("searchButton");
    
    const executeSearch = () => {
      const term = searchInput.value.trim();
      if (term) window.location.href = `/imoveis/search?q=${encodeURIComponent(term)}`;
    };

    searchButton.addEventListener("click", (e) => {
      e.preventDefault();
      executeSearch();
    });

    searchInput.addEventListener("keypress", (e) => {
      if (e.key === "Enter") {
        e.preventDefault();
        executeSearch();
      }
    });
  });
</script>