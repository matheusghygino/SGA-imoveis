---
const { imovel } = Astro.props;
---

<article class="bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition-shadow">
  <a href={`/imoveis/${imovel.slug}/`} class="block">
    <img
      src={imovel.data.image}
      alt={imovel.data.title}
      class="w-full h-48 object-cover"
      loading="lazy"
    />
    <div class="p-4">
      <span class="text-sm text-gray-500">{imovel.data.categoria}</span>
      <h3 class="text-xl font-bold text-primary-DEFAULT mt-2">
        {imovel.data.title}
      </h3>
      <p class="text-gray-700 mt-2">
        {imovel.data.cidade}, {imovel.data.estado}
      </p>
      <p class="text-lg font-bold text-secondary-DEFAULT mt-2">
        {imovel.data.valor}
      </p>
    </div>
  </a>
</article>