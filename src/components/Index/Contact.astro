import ContactForm from "../Forms/ContactForm.astro";

// src/components/ContactSection.astro

---

<section id="contato" class="py-20 bg-primary-DEFAULT/10">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Cabeçalho -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary-DEFAULT mb-4">
          Fale com Nossos Especialistas
        </h2>
        <p class="text-lg text-neutral-700">
          Preencha o formulário abaixo e entraremos em contato para entender suas necessidades
