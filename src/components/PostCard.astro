---
export interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      date: string;
      excerpt: string;
      category: string;
      image: string;
    };
  };
}
const { post } = Astro.props;
---
<li class="p-4 bg-white rounded-lg shadow flex flex-col md:flex-row">
  <!-- Imagem -->
  <img src={post.data.image} alt={post.data.title} class="w-full md:w-1/3 h-auto rounded-lg mb-4 md:mb-0 md:mr-4" />

  <!-- Conteúdo -->
  <div class="flex flex-col justify-between">
    <!-- Categoria -->
    <p class="text-sm text-gray-500 mb-1">{post.data.category}</p>

    <!-- Título -->
    <a href={`/blog/${post.slug}/`} class="text-xl font-semibold text-lime-900 hover:underline">
      {post.data.title}
    </a>

    <!-- Data (sem alterações) -->
    <p class="text-sm text-gray-400">
      {new Date(post.data.date).toLocaleDateString('en-US', {
        month: '2-digit',
        day: '2-digit',
        year: 'numeric',
      })}
    </p>

    <!-- Descrição -->
    <p class="mt-2 text-gray-700">{post.data.excerpt}</p>

    <!-- Read More -->
    <a href={`/blog/${post.slug}/`} class="mt-4 text-lime-700 hover:underline">
      Read more
    </a>
  </div>
</li>