---
import Footer from "../components/Footer/Footer.astro";
import Header from "../components/Header/Header.astro";
import "aos/dist/aos.css";
import ScrollToTopButton from "../components/Buttons/ScrollToTopButton.astro";
import FloatingWhatsAppButton from "../components/Buttons/FloatingWhatsAppButton.astro";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta
      name="keywords"
      content="imóveis à venda, Vila Velha, Espírito Santo, Praia da Costa, Itapoã, Itaparica, apartamentos Vila Velha, casas à venda ES, imóveis no litoral, SGA Imóveis"
    />
    <meta name="author" content="SGA Imóveis" />

    <link rel="canonical" href={Astro.url.href} />

    <!-- Fontes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon (se quiser adicionar depois) -->
    <!-- <link rel="icon" href="/favicon.ico" /> -->

    <!-- Meta Social (Open Graph para Facebook/LinkedIn) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content="/thumb.jpg" />
    <!-- atualize com imagem real -->

    <!-- Meta Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/thumb.jpg" />
  </head>
  <body class="bg-ligth">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <ScrollToTopButton />
    <FloatingWhatsAppButton />

    <!-- Seu schema JSON -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Fontes & Fontes Cleaning",
        "image": "https://www.fontescleaningllc.com/logo.jpg",
        "description": "Professional cleaning services in Seattle, Bellevue, Kirkland, and surrounding areas.",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "18234 73rd Avenue",
          "addressLocality": "Northeast Kenmore",
          "addressRegion": "WA",
          "postalCode": "98028",
          "addressCountry": "USA"
        },
        "telephone": "(509) 645-2818",
        "url": "https://www.fontescleaningllc.com",
        "openingHours": "Mo-Fr 08:00-18:00"
      }
    </script>

        <!-- Adiamento do Google Tag Manager -->
        <script>
          window.addEventListener('load', function() {
            const gtmScript = document.createElement('script');
            gtmScript.src = "https://www.googletagmanager.com/gtag/js?id=G-DZPD455W6G";
            gtmScript.async = true;
            document.head.appendChild(gtmScript);
    
            window.dataLayer = window.dataLayer || [];
            function gtag(){ window.dataLayer.push(arguments); }
            gtag('js', new Date());
            gtag('config', 'G-1WQ1SGFVDM');
          });
        </script>

    <script>
      import AOS from "aos";
      AOS.init({
        duration: 500,
        once: false,
      });
    </script>
  </body>
</html>
